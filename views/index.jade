extends layout

block content
  header
      h1= title
      p A book recommendation and discovery engine
  div#book_input
      form(name="book_input", action="/result", method="post", class="recommend_form")
          p Give the name of the books you've read to discover new ones
          input(name="book", placeholder="Enter book name. Separate multiple book names with a comma.", id="book_name", class="book_name")
          input(type="submit", value="Get me recommendations", class="submit")
  div#book_result
